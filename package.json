{
  "name": "uic-ecommerce",
  "version": "1.0.0",
  "author": "Ronel Mayor",
  "description": "ecommerce monorepo",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "dev": "pnpm -r --parallel --filter \"./apps/*\" dev",
    "build": "pnpm build:apps",
    "build:apps": "pnpm -r --filter \"./apps/*\" build",
    "lint": "eslint . --max-warnings=0 && echo \"ESLint: No issues found.\"",
    "test": "echo \"Error: no test configured\"",
    "prepare": "husky",
    "format": "prettier --write .",
    "type-check": "pnpm -r --filter \"./packages/*\" type-check"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": "24.x"
  }
}
